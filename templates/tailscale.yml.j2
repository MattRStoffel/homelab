 tailscale-{{ name }}:
  image: tailscale/tailscale:latest
  container_name: tailscale-{{ name }}
  hostname: {{ name }}
  volumes:
   - ~/tailscale/{{ name }}_state:/var/lib/tailscale
   - /dev/net/tun:/dev/net/tun
  cap_add:
   - net_admin
   - sys_module
  restart: unless-stopped
  environment:
   - TS_AUTHKEY={{ ts_authkey }}
   - TS_STATE_DIR=/var/lib/tailscale
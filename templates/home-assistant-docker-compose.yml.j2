# {{ ansible_managed }}
---

services:
{% if tailscale_enable and ts_authkey %}
{% with name='{{ name }}' %}
{% include 'tailscale.yml.j2'%}
{% endwith %}

   - TS_USERSPACE=false
   - TS_DEST_IP=192.168.1.2
{% endif %}

 {{ name }}:
    image: ghcr.io/home-assistant/home-assistant:stable
    container_name: {{ name }}
    volumes:
      - ./config:/config
      - /etc/localtime:/etc/localtime:ro
    environment:
      - TZ={{ timezone }} 
    restart: unless-stopped
    privileged: true
    ports:
      - 8123:8123
    network_mode: host



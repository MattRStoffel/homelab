---
services:
  samba:
    image: dperson/samba
    container_name: samba
    environment:
      TZ: '{{ timezone }}'
    networks:
      - default
    ports:
      - "137:137/udp"
      - "138:138/udp"
      - "139:139/tcp"
      - "445:445/tcp"
    tmpfs:
      - /tmp
    restart: unless-stopped
    stdin_open: true
    tty: true
    volumes:
      - "{{ games_dir }}/steam:/mnt:z"
    command: >
      -s "Games;/mnt;yes;no;no;deck"
      -u "deck;deck"
      -p

networks:
  default:

